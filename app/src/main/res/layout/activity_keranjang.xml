<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".KeranjangActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbarCart"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>
    </android.support.design.widget.AppBarLayout>

    <TextView
        android:id="@+id/judul_produk3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/thumbnail_home"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="65dp"
        android:textColor="#000"
        android:text="2 item di kerangang anda"
        android:textSize="14dp"
        android:textStyle="bold"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_input2"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="100dp">

        <CheckBox android:id="@+id/checkbox_meat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paket Wisata" />

    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:elevation="3dp"
        card_view:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/thumbnail_home"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:src="@drawable/jatimpark"
                android:layout_marginRight="10dp"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/judul_produk"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/thumbnail_home"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:textColor="#000"
                android:text="Jatim Park, Coban Rondo, Villa 19"
                android:textSize="14dp"
                android:textStyle="bold"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_toRightOf="@id/judul_produk"
                android:src="@drawable/ic_close"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/txt_harga"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/thumbnail_home"
                android:layout_below="@id/judul_produk"
                android:text="Rp. 200.000"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/txt_stok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/thumbnail_home"
                android:layout_below="@id/txt_harga"
                android:text=""
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textColor="#454545"
                android:textSize="14dp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_input2"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="260dp">

        <CheckBox android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Oleh-oleh" />

    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_home2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="293dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:elevation="3dp"
        card_view:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/thumbnail_home2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:src="@drawable/strudel"
                android:layout_marginRight="10dp"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/judul_produk2"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/thumbnail_home2"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:textColor="#000"
                android:text="Strudle Malang"
                android:textSize="14dp"
                android:textStyle="bold"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_toRightOf="@id/judul_produk2"
                android:src="@drawable/ic_close"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/txt_harga2"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/thumbnail_home2"
                android:layout_below="@id/judul_produk2"
                android:text="Rp. 200.000"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/txt_stok2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/thumbnail_home2"
                android:layout_below="@id/txt_harga2"
                android:text=""
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textColor="#454545"
                android:textSize="14dp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center"
        android:text="Bayar Sekarang"
        android:textAllCaps="false"
        android:layout_below="@+id/spin_kategori"
        android:layout_marginTop="365dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#79B712"
        android:textColor="#fff"/>

</android.support.design.widget.CoordinatorLayout>